<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activities.futsal.FutsalProfileActivity">

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:gravity="center"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/tvFutsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfilePic"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Futsal Name"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFutsalEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFutsal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:text="Email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFutsalPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFutsalEmail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:text="Phone"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>