<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/officeMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thank you for using this application!! Futsal record android application will help you store your customer data and add events. If you get bored you can play tic tac toe with your friend. If you have any problem. You are welcome to visit our office."
        android:textSize="20sp" />
</LinearLayout>