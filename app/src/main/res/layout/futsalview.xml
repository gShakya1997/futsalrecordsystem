<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/cardViewColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFutsalName"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardViewColor"
        android:drawableStart="@drawable/ic_org_black_24dp"
        android:drawableLeft="@drawable/ic_org_black_24dp"
        android:text=" Futsal Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFutsalAddress"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:background="@color/cardViewColor"
        android:drawableStart="@drawable/ic_my_location_black_24dp"
        android:drawableLeft="@drawable/ic_my_location_black_24dp"
        android:text=" Location"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFutsalPhone"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:background="@color/cardViewColor"
        android:drawableStart="@drawable/ic_smartphone_black_24dp"
        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
        android:text=" Phone Number"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFutsalOpeningTime"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/cardViewColor"
        android:drawableStart="@drawable/ic_opening_time_black_24dp"
        android:drawableLeft="@drawable/ic_opening_time_black_24dp"
        android:text=" Opening Time"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFutsalClosingTime"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/cardViewColor"
        android:drawableStart="@drawable/ic_timer_black_24dp"
        android:drawableLeft="@drawable/ic_timer_black_24dp"
        android:text=" Closing Time"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFutsalPrice"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="140dp"
        android:background="@color/cardViewColor"
        android:text=" Price"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>